@model Dashboard.Models.Expenses

<div class="content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header card-header-primary">
						<h4 class="card-title ">Add Expense</h4>
						<p class="card-category">Add Expenses To Your Database And Keep Track Of Your Funds</p>
					</div>
					<div class="card-body">
						<form asp-action="ExpensesNew" asp-controller="Expenses" method="post">
							<div class="form-group">
								<div class="bg-danger">
									<span asp-validation-for="Item"></span>
								</div>
								<label asp-for="Item"></label>
								<input asp-for="Item" class="form-control" placeholder="Item To Add" />
							</div>
							<div class="form-group">
								<div class="bg-danger">
									<span asp-validation-for="Cost"></span>
								</div>
								<label asp-for="Cost"></label>
								<input asp-for="Cost" class="form-control" placeholder="Cost Of Item" />
							</div>
							<input type="submit" value="Submit" class="btn btn-primary btn-round"/>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

