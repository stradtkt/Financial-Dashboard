@model Dashboard.Models.RegisterUser

<div class="content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header card-header-primary">
						<h4 class="card-title ">Register</h4>
					</div>
					<div class="card-body">
						<form asp-action="Register" asp-controller="Users" method="post">
							<div class="form-group">
								<div class="bg-danger">
									<span asp-validation-for="FirstName"></span>
								</div><br />
								<label asp-for="FirstName"></label>
								<input asp-for="FirstName" class="form-control" placeholder="First Name" />
							</div>
							<div class="form-group">
								<div class="bg-danger">
									<span asp-validation-for="LastName"></span>
								</div><br />
								<label asp-for="LastName"></label>
								<input asp-for="LastName" class="form-control" placeholder="Last Name" />
							</div>
							<div class="form-group">
								<div class="bg-danger">
									<span asp-validation-for="Email"></span>
								</div><br />
								<label asp-for="Email"></label>
								<input asp-for="Email" class="form-control" placeholder="Email" />
							</div>
							<div class="form-group">
								<div class="bg-danger">
									<span asp-validation-for="Password"></span>
								</div><br />
								<label asp-for="Password"></label>
								<input asp-for="Password" class="form-control" placeholder="Password" />
							</div>
							<div class="form-group">
								<div class="bg-danger">
									<span asp-validation-for="Confirm"></span>
								</div><br />
								<label asp-for="Confirm"></label>
								<input asp-for="Confirm" class="form-control" placeholder="Confirm Password" />
							</div>
							<input type="submit" value="Submit" class="btn btn-primary btn-round"/>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>